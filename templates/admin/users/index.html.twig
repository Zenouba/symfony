{% extends 'base.html.twig' %}

{% block title %}
	GÉRER LES UTILISATEURS
{% endblock %}

{% block body %}
	<style>
		table {
			width: 800px;
			border-collapse: collapse;
			overflow: hidden;
			box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
		}

		th,
		td {
			padding: 15px;
			background-color: rgba(255, 255, 255, 0.2);
			color: #333;
			text-align: center;

		}

		thead {
			th {
				background-color: #55608f;
			}
		}

		tbody {
			tr {
				&:hover {
					background-color: rgba(255, 255, 255, 0.3);
				}
			}
			td {
				position: relative;
				&:hover {
					&:before {
						content: "";
						position: absolute;
						left: 0;
						right: 0;
						top: -9999px;
						bottom: -9999px;
						background-color: rgba(255, 255, 255, 0.2);
						z-index: -1;
					}
				}
			}
		}
		.success-msg {
			color: #270;
			background-color: #dff0d8;
			border: 1px solid #d6e9c6;
			color: #3c763d;
			border-radius: 5px;
			padding: 10px;
			border-radius: 5px;
			width: 50%;
			margin-top: 20px;
		}
		.msg-container {
			display: flex;
			justify-content: center;
		}
		.button-container {
			display: flex;
			align-items: center;
			justify-content: center;
		}

		button {
			display: flex;
			align-items: center;
			justify-content: center;
			color: whitesmoke;
			background-color: #b26f66;
			text-decoration: none;
			font-weight: bold;
			text-align: center;
			border: 2px solid transparent;
			padding: 13px 30px;
			border-radius: 30px;
			transition: 0.4s;
		}
		button:hover {
			background-color: transparent;
			border: 2px solid #b26f66;
			cursor: pointer;
			color: #333;
		}
	</style>
	{% for message in app.flashes("message") %}
		<div class="msg-container">
			<div class="success-msg">
				<i class="fa fa-check"></i>
				{{ message }}
			</div>
		</div>
	{% endfor %}
	<br>
	<br>
	<h2 style="margin-top:1rem; text-align:center;">
		GÉRER LES UTILISATEURS
		<small>
			{{users|length}}
		</small>
	</h2>
	<section class="articles1" style="margin-left:5rem;">
		<div class="container">
			<table>
				<thead>
					<tr>
						<th>
							Nom
						</th>
						<th>
							Prénom
						</th>
						<th>
							E-mail
						</th>
						<th>
							Sexe
						</th>
						<th>
							Numéro de telephone
						</th>
						<th>
							Ville
						</th>
						<th>
							Région
						</th>
						<th>
							Pays
						</th>
						<th>
							Actions
						</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						{% if 'ROLE_ADMIN' not in user.roles %}
							<tr>
								<td>
									{{user.nom}}
								</td>
								<td>
									{{user.prenom}}
								</td>
								<td>
									{{user.email}}
								</td>
								<td>
									{{user.sexe}}
								</td>
								<td>
									{{user.numtel}}
								</td>
								<td>
									{{user.ville}}
								</td>
								<td>
									{{user.region}}
								</td>
								<td>
									{{user.pays}}
								</td>
								<td class="text-center">
									<a href="{{path("admin_users_supprimer",{id:user.id})}}">
										<button>
											Supprimer
										</button>
									</a>
								</td>
							</tr>
						{% endif %}
					{% endfor %}
				</tbody>
			</table>
		</div>
	</section>

{% endblock %}
